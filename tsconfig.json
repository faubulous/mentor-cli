{
  "include": ["src/**/*"],
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
